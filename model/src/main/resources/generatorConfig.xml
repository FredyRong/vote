<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="VoteTables" targetRuntime="Mybatis3" defaultModelType="flat">
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />

        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <jdbcConnection
                driverClass="com.mysql.cj.jdbc.Driver"
                connectionURL="jdbc:mysql://127.0.0.1:3306/vote?useUnicode=true&amp;characterEncoding=UTF8&amp;useSSL=false&amp;serverTimezone=Asia/Shanghai"
                userId="root" password="root">
            <property name="nullCatalogMeansCurrent" value="true" />
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
            <!-- 此属性用于指定MyBatis生成器是否应强制对日期、时间和和时间戳字段，生成JDK8的时间类型，而不是使用java.util.date -->
            <property name="useJSR310Types" value="true"/>
        </javaTypeResolver>

        <javaModelGenerator
                targetPackage="com.fredy.vote.model.entity"
                targetProject="./src/main/java">
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <sqlMapGenerator
                targetPackage="mappers"
                targetProject="./src/main/resources">
            <property name="enableSubPackages" value="false"/>
            <property name="trimStrings" value="true" />
        </sqlMapGenerator>

        <javaClientGenerator
                type="XMLMAPPER"
                targetPackage="com.fredy.vote.model.mapper"
                targetProject="./src/main/java">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <table tableName="user" domainObjectName="User">
            <generatedKey column="id" sqlStatement="Mysql"/>
            <columnOverride column="type" javaType="Integer"/>
        </table>

        <table tableName="vote_theme" domainObjectName="VoteTheme">
            <generatedKey column="id" sqlStatement="Mysql"/>
            <columnOverride column="select_type" javaType="Integer"/>
            <columnOverride column="status" javaType="Integer"/>
        </table>

        <table tableName="vote_theme_option" domainObjectName="VoteThemeOption">
            <generatedKey column="id" sqlStatement="Mysql"/>
        </table>

        <table tableName="user_vote_detail" domainObjectName="UserVoteDetail"></table>
    </context>
</generatorConfiguration>